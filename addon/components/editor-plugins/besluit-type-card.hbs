<div class="modal-dialog modal-dialog--small">
  <div class="modal-dialog__header">
    <div class="grid">
      <div class="col--10-12">
        {{#if this.hasSelected}}
          <strong>Geselecteerd besluittype:</strong>
        {{else}}
          <strong>Voeg een besluittype in:</strong>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="modal-dialog__content">
    {{#if this.hasSelected}}
      <BesluitTypeSelect @disabled={{true}} @besluitTypes={{this.besluitTypes}} @onchange={{this.updateBesluitType}} @selected={{this.besluit}} />
    {{else}}
      <BesluitTypeSelect @besluitTypes={{this.besluitTypes}} @onchange={{this.updateBesluitType}} @selected={{this.besluit}} />
    {{/if}}
  </div>
  {{#unless this.hasSelected}}
    {{#if this.besluit.subTypes.length}}
      <div class="modal-dialog__content">
        <BesluitTypeSelect @besluitTypes={{this.besluitType.subTypes}} @onchange={{this.updateBesluitSubType}} @selected={{this.subBesluit}} />
      </div>
    {{/if}}
    {{#if this.subBesluit.subTypes.length}}
      <div class="modal-dialog__content">
        <BesluitTypeSelect @besluitTypes={{this.subBesluit.subTypes}} @onchange={{this.updateBesluitSubSubType}} @selected={{this.subSubBesluit}} />
      </div>
    {{/if}}
  {{/unless}}
  <div class="modal-dialog__footer">
    <WuButtonGroup>
      <WuButton @label="{{if this.hasSelected 'Pas aan' 'Voeg in'}}" class="button button--narrow" @onClick={{this.insert}} />
    </WuButtonGroup>
  </div>
</div>

{{yield}}
